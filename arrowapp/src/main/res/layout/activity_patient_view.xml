<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arrow.arrowhc.PatientView"
    android:background="@drawable/back">


    <TextView
        android:text="Patient Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pname"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pname"
        android:layout_centerHorizontal="true"
        android:id="@+id/idd"
        android:textColor="@color/white"
        android:textSize="21dp"/>

    <TextView
        android:text="Doctor Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textV"
        android:layout_toEndOf="@+id/idd"
        android:id="@+id/doctr"
        android:textColor="@color/white"
        android:textSize="21dp"/>

    <TextView
        android:text="Nurse Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/doctr"
        android:id="@+id/nrse"
        android:textColor="@color/white"
        android:textSize="21dp"/>

    <TextView
        android:text="Blood Pre."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/nrse"
        android:id="@+id/bpresr"
        android:textColor="@color/white"
        android:textSize="21dp"/>

    <TextView
        android:text="Heart Beat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignStart="@+id/bpresr"
        android:id="@+id/heartbeat"
        android:textColor="@color/white"
        android:textSize="21dp"/>

    <TextView
        android:text="Cholestrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/heartbeat"
        android:id="@+id/cholestrl"
        android:textColor="@color/white"
        android:textSize="21dp"/>

    <TextView
        android:text="Temper."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Temper"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:layout_below="@+id/heartbeat"
        android:layout_alignStart="@+id/heartbeat"
        android:layout_marginTop="26dp" />

    <TextView
        android:text="Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/textV"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:layout_below="@+id/idd"
        android:layout_toStartOf="@+id/pname"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="Nurse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView4"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:layout_below="@+id/textV"
        android:layout_alignStart="@+id/textV" />

    <TextView
        android:text="B. pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textView6"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:text="Heart Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textView8"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:text="Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:layout_alignBaseline="@+id/Temper"
        android:layout_alignBottom="@+id/Temper"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:text="Cholestrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/textView10"
        android:textColor="@color/white"
        android:textSize="21dp"
        android:layout_below="@+id/textView13"
        android:layout_toStartOf="@+id/idd" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignStart="@+id/cholestrl"
        android:id="@+id/dat"
        android:textSize="21dp"
        android:textColor="@color/white"/>

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textView15"
        android:textSize="21dp"
        android:textColor="@color/white"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView13" />

    <Button
        android:text="Request to Doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/button2"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <Button
        android:text="REQUEST TO NURSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginStart="20dp"
        android:id="@+id/button3" />


</RelativeLayout>
