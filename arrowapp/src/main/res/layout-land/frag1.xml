<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/searcheable"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        >
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="15dp"
        android:layout_marginTop="34dp"
        android:id="@+id/by_name"
        android:hint="Patient Name"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"

        android:textColorHint="@color/bg"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="SEARCH"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="34dp"
        android:id="@+id/by_n"
        android:layout_below="@+id/searcheable"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:background="@drawable/search_b"
       />
   <RelativeLayout
       android:layout_width="300dp"
       android:layout_height="300dp"
       android:orientation="horizontal"
       android:layout_alignParentRight="true">
    <ListView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:id="@+id/frag_one_l"
        android:layout_alignParentRight="true"

        android:layout_marginTop="15dp"
        android:background="@color/bg"></ListView>
   </RelativeLayout>
</RelativeLayout>