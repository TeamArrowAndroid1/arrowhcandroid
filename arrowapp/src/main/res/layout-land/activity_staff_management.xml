<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_staff_management"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.arrow.arrowhc.StaffManagement">

    <Button
        android:text="ADD NEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addStaff"
        android:background="@drawable/search_b"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <ListView
        android:id="@+id/staffLists"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:background="@color/bg"
        android:layout_below="@+id/addStaff"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />
</RelativeLayout>
